---
export const prerender = true; // หน้า static 100%
const FALLBACK = "/th";
---

<!doctype html>
<html lang="th">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>AstroWP • Redirect</title>
    <meta name="robots" content="noindex" />
  </head>
  <body>
    <!-- redirect ฝั่ง client ตามภาษาเครื่อง -->
    <script is:inline>
      (function () {
        try {
          var raw = (navigator.language || navigator.userLanguage || "").toLowerCase();
          var to = raw.includes("en") ? "/en" : "/th";
          location.replace(to);
        } catch (e) {
          location.replace("{{FALLBACK}}".replace("{{FALLBACK}}", "{{FALLBACK}}"));
        }
      })();
    </script>

    <noscript>
      <!-- ปิด JS: รีไดเรกต์ไป Fallback อัตโนมัติ + ลิงก์เผื่อเลือกเอง -->
      <meta http-equiv="refresh" content="0;url=/th" />
      <p>เลือกภาษา: <a href="/th">ไทย</a> | <a href="/en">English</a></p>
    </noscript>
  </body>
</html>
