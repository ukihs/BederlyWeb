---
export const prerender = true;
const FALLBACK = "/th";
---

<!doctype html>
<html lang="th">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>AstroWP • Redirect</title>
    <meta name="robots" content="noindex" />
  </head>
  <body>
    <!-- redirect ไปภาษาไทยเสมอ -->
    <script is:inline>
      (function () {
        try {
          location.replace("/th");
        } catch (e) {
          location.replace("/th");
        }
      })();
    </script>

    <noscript>
      <meta http-equiv="refresh" content="0;url=/th" />
      <p>เลือกภาษา: <a href="/th">ไทย</a> | <a href="/en">English</a></p>
    </noscript>
  </body>
</html>