---
// src/pages/[lang]/index.astro
import Layout from "../../../layouts/Layout.astro";

export async function getStaticPaths() {
  return [{ params: { lang: "th" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params;

// hreflang alternates
const alternates = [
  { lang: "th", url: "/th" },
  { lang: "en", url: "/en" },
];
---

<Layout lang={lang} showNavLinks={true} alternates={alternates}>
  <!-- HERO SECTION -->
  <section class="relative bg-gradient-to-br from-sky-400 via-blue-500 to-blue-600 min-h-screen overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 bg-gradient-to-r from-blue-600/20 to-transparent"></div>
    
    <div class="container mx-auto px-6 py-16 relative z-10">
      <div class="grid lg:grid-cols-2 gap-12 items-center min-h-[80vh]">
        
        <!-- Left Content -->
        <div class="text-white">
          <h1 class="text-5xl lg:text-6xl font-bold mb-6">
            Smart Bed
          </h1>
          <p class="text-xl lg:text-2xl mb-4 font-light">
            Innovative Care
          </p>
          <p class="text-xl lg:text-2xl mb-8 font-light">
            for the Ones Your loved ones
          </p>
          
          <button class="bg-white text-blue-600 px-8 py-3 rounded-full font-semibold text-lg hover:bg-blue-50 transition-colors duration-300 shadow-lg">
            <span class="flex items-center gap-2">
              Contact Us
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </span>
          </button>
        </div>

        <!-- Right Content - Hospital Bed Image -->
        <div class="relative">
          <!-- Main bed and patient image -->
          <div class="relative bg-white/10 backdrop-blur-sm rounded-3xl p-8 shadow-2xl">
            <img 
              src="/images/smart-bed-main.jpg" 
              alt="Smart hospital bed with patient and nurse"
              class="w-full h-auto rounded-2xl shadow-lg"
              loading="eager"
            />
            
            <!-- Feature callouts -->
            <div class="absolute -left-4 top-1/4 transform -translate-y-1/2">
              <div class="bg-blue-600 text-white px-4 py-2 rounded-full text-sm font-medium shadow-lg">
                Left-right side tilt adjustment
              </div>
            </div>
            
            <div class="absolute -right-4 top-1/3 transform -translate-y-1/2">
              <div class="bg-blue-600 text-white px-4 py-2 rounded-full text-sm font-medium shadow-lg">
                Height adjustment
              </div>
            </div>
            
            <div class="absolute -right-8 bottom-1/4 transform translate-y-1/2">
              <div class="bg-blue-600 text-white px-4 py-2 rounded-full text-sm font-medium shadow-lg">
                Leg section up-down adjustment
              </div>
            </div>
          </div>
          
          <!-- Small bed images row -->
          <div class="flex justify-center gap-4 mt-8">
            <div class="bg-white/90 rounded-xl p-3 shadow-lg">
              <img 
                src="/images/bed-feature-1.jpg" 
                alt="Bed adjustment feature 1"
                class="w-24 h-16 object-cover rounded-lg"
                loading="lazy"
              />
              <div class="text-xs text-center text-blue-800 font-medium mt-2">
                Left-right side tilt adjustment
              </div>
            </div>
            
            <div class="bg-white/90 rounded-xl p-3 shadow-lg">
              <img 
                src="/images/bed-feature-2.jpg" 
                alt="Bed adjustment feature 2" 
                class="w-24 h-16 object-cover rounded-lg"
                loading="lazy"
              />
              <div class="text-xs text-center text-blue-800 font-medium mt-2">
                Height adjustment
              </div>
            </div>
            
            <div class="bg-white/90 rounded-xl p-3 shadow-lg">
              <img 
                src="/images/bed-feature-3.jpg" 
                alt="Bed adjustment feature 3"
                class="w-24 h-16 object-cover rounded-lg" 
                loading="lazy"
              />
              <div class="text-xs text-center text-blue-800 font-medium mt-2">
                Leg section up-down adjustment
              </div>
            </div>
          </div>
          
          <!-- Carousel indicators -->
          <div class="flex justify-center gap-2 mt-6">
            <div class="w-2 h-2 bg-blue-800 rounded-full"></div>
            <div class="w-2 h-2 bg-white/40 rounded-full"></div>
            <div class="w-2 h-2 bg-white/40 rounded-full"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Decorative elements -->
    <div class="absolute bottom-0 left-0 w-full h-32 bg-gradient-to-t from-white/10 to-transparent"></div>
    
    <!-- Floating elements -->
    <div class="absolute top-20 right-20 w-20 h-20 bg-white/10 rounded-full blur-xl"></div>
    <div class="absolute bottom-32 left-16 w-12 h-12 bg-white/20 rounded-full blur-lg"></div>
  </section>

  <!-- Next Section - Smart Bed's Features -->
  <section id="features" class="py-20 bg-white">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-800 mb-4">
          Smart Bed's Features
        </h2>
        <div class="w-24 h-1 bg-blue-500 mx-auto"></div>
      </div>
      
      <!-- Features content will be added here -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Feature items will be populated from WordPress -->
      </div>
    </div>
  </section>
</Layout>