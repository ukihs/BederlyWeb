---
// src/pages/[lang]/index.astro
import Layout from "../../layouts/Layout.astro";
import InnovationsSection from "../../components/InnovationsSection.astro";
import SmartBedSection from "../../components/SmartBedSection.astro";
import HeroCategoryImages from "../../components/HeroCategoryImages.astro";
import FunctionSection from "../../components/FunctionSection.astro";
import AboutBederly from "../../components/AboutBederly.astro";
import EcosystemSection from "../../components/EcosystemSection.astro";
import ServicesSection from "../../components/ServicesSection.astro";
import TeamSection from "../../components/TeamSection.astro";
import Testimonials from "../../components/Testimonials.astro";
import Footer from "../../components/Footer.astro";
import ProgressSlider from "../../components/ProgressSlider.astro";
import DownloadSection from "../../components/DownloadSection.astro";
import MoreInfoSection from "../../components/MoreInfoSection.astro";
import Medip from "../../components/Medip.astro";
import PartnersGroup from "../../components/PartnersGroup.astro";
import HOME_QUERY from "../../queries/home";
import { wpQuery } from "../../lib/wp";
import { rewriteWpUrl } from "../../lib/wpUrl";

export async function getStaticPaths() {
  return [
    { params: { lang: "th" } },
    { params: { lang: "en" } }
  ];
}

const { lang } = Astro.params as { lang: "th" | "en" };
const languageFilter = lang.toUpperCase() as "TH" | "EN";

// Category slugs
const slug = (th: string, en: string) => (lang === "en" ? en : th);
const progressSlug = slug("progress-th", "progress-en");
const teamSlug = slug("team-th", "team-en");
const testimonialsSlug = slug("testimonials-th", "testimonials-en");
const medipSlug = slug("medip-th", "medip-en");

// URIs สำหรับ hero fallback
const uriCandidates = lang === "en"
  ? ["/", "/home/", "/home", "/en/", "/en"]
  : ["/", "/th/", "/th", "/หน้าแรก/", "/หน้าแรก"];

// Helper functions
type Size = { name: string; sourceUrl?: string };
type Img = {
  altText?: string;
  sourceUrl?: string;
  mediaDetails?: { sizes?: Size[] };
};

function normalize(img: any): Img | undefined {
  return img?.node ? img.node : (img ?? undefined);
}

function pickImageUrl(img: any): string | undefined {
  const n = normalize(img);
  if (!n) return undefined;
  const sizes = n.mediaDetails?.sizes ?? [];
  const prefer = ["large", "medium_large", "2048x2048", "1536x1536", "medium"];
  for (const key of prefer) {
    const hit = sizes.find((s) => s?.name === key && s?.sourceUrl);
    if (hit?.sourceUrl) return rewriteWpUrl(hit.sourceUrl);
  }
  return n.sourceUrl ? rewriteWpUrl(n.sourceUrl) : undefined;
}

// Language-specific query for hero
const LANGUAGE_SPECIFIC_QUERY = /* GraphQL */ `
  query PageByLanguage($language: LanguageCodeFilterEnum!) {
    pages(first: 10, where: { language: $language, status: PUBLISH }) {
      nodes {
        id
        title
        uri
        slug
        isFrontPage
        language { code name }
        hero {
          heroTitle
          heroSubtitle
          heroImage {
            node {
              id
              altText
              sourceUrl
              mediaDetails {
                width
                height
                sizes { name width height sourceUrl }
              }
            }
          }
        }
      }
    }
  }
`;

// Fetch hero data
let heroTitle = "";
let heroSubtitle = "";
let heroImgUrl = "";
let foundData = false;

try {
  const languageData = await wpQuery<any>(LANGUAGE_SPECIFIC_QUERY, {
    language: languageFilter,
  });

  const pages = languageData?.pages?.nodes || [];
  let targetPage = pages.find((p: any) => p.isFrontPage) ||
    pages.find((p: any) => p.hero && (p.hero.heroTitle || p.hero.heroImage)) ||
    pages[0];

  if (targetPage) {
    const hero = targetPage.hero;
    if (hero) {
      heroTitle = hero.heroTitle || heroTitle;
      heroSubtitle = hero.heroSubtitle || heroSubtitle;
      heroImgUrl = pickImageUrl(hero.heroImage) || heroImgUrl;
      foundData = !!(heroTitle || heroSubtitle || heroImgUrl);
    }
  }
} catch (e: any) {
  console.error("Hero fetch error:", e.message);
}

// Fallback with URI
if (!foundData) {
  for (const uri of uriCandidates) {
    try {
      const data = await wpQuery<any>(HOME_QUERY, { uri });
      const hero = data?.nodeByUri?.hero;
      if (!hero) continue;

      heroTitle = hero?.heroTitle || heroTitle;
      heroSubtitle = hero?.heroSubtitle || heroSubtitle;
      heroImgUrl = pickImageUrl(hero?.heroImage) || heroImgUrl;

      if (heroTitle || heroSubtitle || heroImgUrl) {
        foundData = true;
        break;
      }
    } catch {}
  }
}
---

<Layout
  lang={lang}
  showNavLinks={true}
  alternates={[
    { lang: "th", url: "/th" },
    { lang: "en", url: "/en" },
  ]}
>
  <!-- Hero Section with Consistent Spacing -->
  <section class="relative mobile-safe">
    <div class="container-primary mobile-container">
      <div class="relative overflow-hidden overflow-x-clip shadow-2xl mobile-hero-wrapper">
        {heroImgUrl ? (
          <div class="relative mobile-hero-image">
            <img
              src={heroImgUrl}
              alt=""
              class="block w-full h-auto mobile-hero-img"
              loading="eager"
              decoding="async"
            />
            
            <!-- Text Overlay -->
            <div class="absolute inset-0 flex items-end">
              <div class="w-full px-responsive pb-8 sm:pb-12 md:pb-16 lg:pb-20">
                <div class="max-w-3xl mobile-hero-content">
                  <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl 
                             font-bold text-white leading-tight mb-3 sm:mb-4 text-shadow-lg
                             mobile-hero-title">
                    {heroTitle.split('\n').map((line, i) => (
                      <Fragment>
                        {line}
                        {i < heroTitle.split('\n').length - 1 && <br />}
                      </Fragment>
                    ))}
                  </h1>
                  {heroSubtitle && (
                    <p class="text-base sm:text-lg md:text-xl lg:text-2xl 
                              text-white/90 leading-relaxed max-w-2xl text-shadow-md
                              mobile-hero-subtitle">
                      {heroSubtitle}
                    </p>
                  )}
                </div>
              </div>
            </div>
          </div>
        ) : (
          <div class="relative h-[400px] sm:h-[500px] md:h-[600px] lg:h-[700px] 
                      bg-gradient-to-br from-cyan-500 to-blue-600 mobile-hero-fallback">
            <div class="absolute inset-0 flex items-end">
              <div class="w-full px-responsive pb-8 sm:pb-12 md:pb-16 lg:pb-20">
                <div class="max-w-3xl mobile-hero-content">
                  <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl 
                             font-bold text-white leading-tight mb-3 sm:mb-4 mobile-hero-title">
                    {lang === "en" ? "Smart Bed Innovation" : "นวัตกรรมเตียงอัจฉริยะ"}
                  </h1>
                  <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-white/90 leading-relaxed mobile-hero-subtitle">
                    {lang === "en" 
                      ? "Advanced care solutions for better health" 
                      : "โซลูชันการดูแลขั้นสูงเพื่อสุขภาพที่ดีขึ้น"}
                  </p>
                </div>
              </div>
            </div>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Smart Bed Section -->
  <section id="smartbed" class="section-padding">
    <SmartBedSection lang={lang} />
  </section>

  <!-- Product Gallery -->
  <section id="gallery" class="section-padding-sm">
    <div class="container-primary">
      <HeroCategoryImages lang={lang} limit={9} />
    </div>
  </section>

  <!-- Functions -->
  <section id="functions" class="section-padding">
    <div class="container-primary">
      <FunctionSection lang={lang} limit={10} />
    </div>
  </section>

  <!-- Innovations -->
  <section id="innovations" class="section-padding">
    <div class="container-primary">
      <InnovationsSection lang={lang} limit={6} />
    </div>
  </section>

  <!-- More Info -->
  <section id="moreinfo" class="section-padding-sm">
    <MoreInfoSection lang={lang} limit={2} />
  </section>

  <!-- About Bederly -->
  <section id="about" class="section-padding">
    <AboutBederly lang={lang} pageUriTH="/" pageUriEN="/en/welcome/" />
  </section>

  <!-- Ecosystem -->
  <section id="ecosystem" class="section-padding">
    <EcosystemSection
      lang={lang}
      pageUriTH="/"
      pageUriEN="/en/welcome/"
      size="lg"
    />
  </section>

  <!-- Progress -->
  <section id="progress" class="section-padding">
    <ProgressSlider lang={lang} categorySlug={progressSlug} limit={6} />
  </section>

  <!-- Team -->
  <section id="team" class="section-padding">
    <TeamSection lang={lang} categorySlug={teamSlug} />
  </section>

  <!-- Testimonials -->
  <section id="testimonials" class="section-padding">
    <Testimonials lang={lang} categorySlug={testimonialsSlug} />
  </section>

  <!-- Partners -->
  <section class="section-padding">
    <div class="container-primary section-stack">
      <PartnersGroup
        lang={lang}
        showHeading={true}
        sectionLabel={lang === "en" ? "Public Organizations" : "องค์กรภาครัฐ"}
        categorySlug={slug("public-th", "public-en")}
      />

      <PartnersGroup
        lang={lang}
        sectionLabel={lang === "en" ? "Foundations" : "มูลนิธิ"}
        categorySlug={slug("foundations-th", "foundations-en")}
      />

      <PartnersGroup
        lang={lang}
        sectionLabel={lang === "en" ? "Companies" : "องค์กร"}
        categorySlug={slug("companie-th", "companie-en")}
      />

      <PartnersGroup
        lang={lang}
        sectionLabel={lang === "en" ? "Educational Institutions" : "สถาบันการศึกษา"}
        categorySlug={slug("education-th", "education-en")}
      />

      <PartnersGroup
        lang={lang}
        sectionLabel={lang === "en" ? "Hospital" : "โรงพยาบาล"}
        categorySlug={slug("hospital-th", "hospital-en")}
      />
    </div>
  </section>

  <!-- Medical IP -->
  <section id="medip" class="section-padding">
    <Medip lang={lang} categorySlug={medipSlug} />
  </section>

  <!-- Download -->
  <section id="download" class="section-padding-sm">
    <DownloadSection lang={lang} />
  </section>

  <!-- Footer -->
  <section id="footer">
    <Footer lang={lang} />
  </section>
</Layout>

<style>
  /* Enhanced text shadows for hero */
  h1 {
    text-shadow: 
      0 2px 8px rgba(0, 0, 0, 0.4),
      0 4px 16px rgba(0, 0, 0, 0.3),
      0 8px 24px rgba(0, 0, 0, 0.2);
  }
  
  p {
    text-shadow: 
      0 1px 4px rgba(0, 0, 0, 0.3),
      0 2px 8px rgba(0, 0, 0, 0.2);
  }

  /* ===== MOBILE ONLY FIXES ===== */
  @media (max-width: 767.98px) {
    .mobile-safe {
      overflow-x: hidden !important;
      max-width: 100vw !important;
    }

    .mobile-container {
      max-width: 100vw !important;
      padding-left: 0.5rem !important;
      padding-right: 0.5rem !important;
      overflow-x: hidden !important;
    }

    .mobile-hero-wrapper {
      max-width: 100% !important;
      overflow: hidden !important;
      border-radius: 0 !important;
    }

    .mobile-hero-image {
      max-width: 100vw !important;
      overflow: hidden !important;
    }

    .mobile-hero-img {
      width: 100% !important;
      max-width: 100% !important;
      height: auto !important;
      object-fit: cover !important;
      display: block !important;
    }

    .mobile-hero-content {
      max-width: 100% !important;
      padding: 0 0.5rem !important;
    }

    .mobile-hero-title {
      font-size: 1.75rem !important;
      line-height: 1.2 !important;
    }

    .mobile-hero-subtitle {
      font-size: 0.95rem !important;
      line-height: 1.4 !important;
    }

    .mobile-hero-fallback {
      max-width: 100% !important;
      overflow: hidden !important;
    }
  }

  
</style>