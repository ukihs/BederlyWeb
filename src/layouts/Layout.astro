---
// src/layouts/Layout.astro
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";

interface Alt {
  lang: string;
  url: string;
}

const {
  lang = "th",
  alternates = [] as Alt[],
  showNavLinks = true,
  showNav = true,
} = Astro.props as {
  lang?: "th" | "en";
  alternates?: Alt[];
  showNavLinks?: boolean;
  showNav?: boolean;
};
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Smart Bed - Innovative Hospital Care Solutions</title>
    <meta name="description" content="Smart Bed provides innovative hospital bed solutions with advanced adjustment features for better patient care." />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    {alternates.map((alt) => (
      <link rel="alternate" hrefLang={alt.lang} href={alt.url} />
    ))}
  </head>
  <body class="font-['Inter'] bg-white text-gray-800 antialiased">
    {showNav && <Navbar lang={lang} showLinks={showNavLinks} alternates={alternates} />}
    <main>
      <slot />
    </main>
    
    
  </body>
</html>