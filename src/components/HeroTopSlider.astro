---
// src/components/HeroTopSlider.astro
import { wpQuery } from "../lib/wp";
import { rewriteWpUrl } from "../lib/wpUrl";

export interface Props {
  lang: "th" | "en";
  heroTitle?: string;
  heroSubtitle?: string;
  fallbackImg?: string;
  limit?: number;
}

const {
  lang,
  heroTitle = "",
  heroSubtitle = "",
  fallbackImg = "",
  limit = 10,
} = Astro.props;

/* ---------- utils ---------- */
type Size = { name: string; sourceUrl?: string; width?: number; height?: number };
type Img  = { altText?: string; sourceUrl?: string; mediaDetails?: { sizes?: Size[] } };

function fix(src?: string) { return src ? rewriteWpUrl(src) : src; }
function toSrcSet(sizes?: Size[]) {
  if (!sizes?.length) return undefined;
  return sizes
    .filter(s => s?.sourceUrl && s?.width)
    .map(s => `${fix(s.sourceUrl)} ${s.width}w`)
    .join(", ");
}

/* ---------- data: ใช้หมวด top-en / top-th ---------- */
const topHeroSlug = lang === "en" ? "top-en" : "top-th";

const TOP_HERO_IMAGES = /* GraphQL */ `
  query TopHeroImages($slug: String!, $limit: Int) {
    posts(
      first: $limit
      where: { status: PUBLISH, categoryName: $slug, orderby: { field: DATE, order: ASC } }
    ) {
      nodes {
        id
        featuredImage {
          node {
            altText
            sourceUrl
            mediaDetails { sizes { name width sourceUrl } }
          }
        }
      }
    }
  }
`;

let slides: Img[] = [];
try {
  const data = await wpQuery<any>(TOP_HERO_IMAGES, { slug: topHeroSlug, limit });
  slides = (data?.posts?.nodes ?? [])
    .map((p: any) => p?.featuredImage?.node)
    .filter(Boolean);
} catch (e) {
  console.warn("Top hero images query failed:", e);
}
---

<section id="hero" class="mobile-safe bg-white overflow-hidden">
  {/* ใช้ container-primary เหมือน section อื่น เพื่อให้ความกว้างตรงกัน */}
  <div class="container-primary">
    <div class="hero-frame mobile-hero-wrapper">
      {slides.length ? (
        <div id="hero-fade-slider" class="hero-slider">
          {slides.map((img, i) => (
            <img
              src={fix(img.sourceUrl)}
              srcset={toSrcSet(img.mediaDetails?.sizes)}
              alt={img.altText || ""}
              class={`hero-image fade-slide ${i === 0 ? "active" : ""}`}
              loading={i === 0 ? "eager" : "lazy"}
            />
          ))}

          {(heroTitle || heroSubtitle) && (
            <div class="overlay">
              <div class="overlay-inner">
                {heroTitle && (
                  <h1 class="ov-title">
                    {heroTitle.split("\n").map((line, i, arr) => (
                      <Fragment>
                        {line}
                        {i < arr.length - 1 && <br />}
                      </Fragment>
                    ))}
                  </h1>
                )}
                {heroSubtitle && <p class="ov-sub">{heroSubtitle}</p>}
              </div>
            </div>
          )}
        </div>
      ) : (
        <img src={fallbackImg} alt="" class="hero-image" />
      )}
    </div>
  </div>
</section>

<style>
  :root {
    --hero-radius: 40px;
    --hero-shadow: 0 10px 35px -10px rgba(0,0,0,.25);
  }

  /* กรอบ Hero ด้านใน container-primary */
  .hero-frame {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  @media (min-width: 1024px) {
    .hero-frame {
      border-radius: var(--hero-radius);
      box-shadow: var(--hero-shadow);
    }
  }

  /* ===== Slider & overlay ===== */
  .mobile-hero-wrapper { position: relative; }
  .hero-slider { position: relative; width: 100%; overflow: hidden; }
  .hero-image { width: 100%; height: auto; object-fit: cover; display: block; }

  .fade-slide { position: absolute; inset: 0; opacity: 0; transition: opacity 1s ease-in-out; }
  .fade-slide.active { position: relative; opacity: 1; z-index: 1; }

  .overlay { position: absolute; inset: 0; display: flex; align-items: flex-end; pointer-events: none; }
  .overlay-inner { width: 100%; padding: 2rem 1.25rem 2.5rem; max-width: 64rem; }
  .ov-title {
    color: #fff;
    font-weight: 800;
    line-height: 1.15;
    font-size: clamp(1.5rem, 4vw, 3rem);
    text-shadow: 0 2px 16px rgba(0,0,0,.35);
    margin: 0 0 .5rem 0;
  }
  .ov-sub {
    color: rgba(255,255,255,.9);
    font-size: clamp(.95rem, 2.6vw, 1.25rem);
    max-width: 40rem;
    text-shadow: 0 1px 10px rgba(0,0,0,.3);
    margin: 0;
  }

  /* ===== Mobile: มีมุมโค้งเฉพาะด้านล่าง + ระยะห่างเล็กน้อย ===== */
  @media (max-width:1023.98px){
    #hero.mobile-safe {
      margin-bottom: 1.25rem !important;
      padding-bottom: 0 !important;
    }
    .hero-frame {
      border-radius: 0; /* ใช้ radius แค่ส่วนล่างผ่าน wrapper */
    }
    .mobile-hero-wrapper {
      border-bottom-left-radius: 28px;
      border-bottom-right-radius: 28px;
      overflow: hidden;
    }
  }
</style>

<script>
  // Fade loop
  const slides = Array.from(document.querySelectorAll("#hero-fade-slider .fade-slide"));
  if (slides.length > 1) {
    let i = 0;
    setInterval(() => {
      slides[i].classList.remove("active");
      i = (i + 1) % slides.length;
      slides[i].classList.add("active");
    }, 5000); // เปลี่ยนทุก 5 วิ
  }
</script>
