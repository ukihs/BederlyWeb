---
export interface Props {
  lang: "th" | "en";
  class?: string;
}

const { lang = "th", class: klass = "" } = Astro.props;

const t = {
  th: { title: "บริการของเรา", desc: "Mock text" },
  en: { title: "Our Services", desc: "Mock text" },
}[lang];
---

<section id="services" class={`section-padding ${klass}`}>
  <div class="container-primary">
    <!-- ส่วนหัว -->
    <div class="mb-6 md:mb-8">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900">{t.title}</h2>
      <p class="text-gray-500 mt-1">{t.desc}</p>
    </div>

    <!-- กล่องการ์ดพื้นหลังขาวสนิท -->
    <div class="-mx-4 sm:-mx-6 lg:-mx-8">
      <div
        class="w-full rounded-[24px] bg-white border border-[rgba(0,0,0,.06)]
               shadow-[0_10px_30px_rgba(0,0,0,.08)]
               min-h-[260px] md:min-h-[320px]
               p-4 md:p-6"
      >
      </div>
    </div>
  </div>
</section>

<style>
  .section-padding {
    padding-top: 4rem;
    padding-bottom: 4rem;
  }
  @media (min-width: 768px) {
    .section-padding {
      padding-top: 5rem;
      padding-bottom: 5rem;
    }
  }
</style>
