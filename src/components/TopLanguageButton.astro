---
// src/components/TopLanguageButton.astro
interface Alt { lang: string; url: string }

const { lang = "th", alternates = [] as Alt[] } = Astro.props as {
  lang?: "th" | "en";
  alternates?: Alt[];
};

function altUrl(target: "th" | "en") {
  const found = alternates.find((a) => a.lang?.toLowerCase() === target);
  return found?.url || `/${target}`;
}

const flags = {
  en: "/usflag.png",
  th: "/thaiflag.png",
};
const label = lang === "en" ? "Language" : "ภาษา";
const items = [
  { code: "en", name: "EN", url: altUrl("en"), flag: flags.en },
  { code: "th", name: "TH", url: altUrl("th"), flag: flags.th },
] as const;
---

<div class="lang-abs" id="langRoot" data-open="false">
  <!-- ปุ่มหลัก -->
  <button
    id="langBtn"
    type="button"
    class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full
           bg-white text-[#00D2E6] hover:bg-[#00D2E6] hover:text-white
           text-sm font-semibold transition-all duration-200
           focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-[#00D2E6]"
    aria-haspopup="menu"
    aria-expanded="false"
  >
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="w-4 h-4">
      <path stroke-linecap="round" stroke-linejoin="round"
            d="M12 3a9 9 0 1 0 0 18a9 9 0 0 0 0-18Zm0 0c3 0 5 4 5 9s-2 9-5 9-5-4-5-9 2-9 5-9Zm-9 9h18"/>
    </svg>
    <span>{label}</span>
  </button>

  <!-- เมนูภาษา -->
  <div id="langMenu" role="menu" class="menu-panel">
    {items.map((it) => (
      <a
        href={it.url}
        role="menuitem"
        class={`menu-item ${it.code === lang ? 'is-active' : ''}`}
      >
        <img src={it.flag} alt={it.name} width="18" height="18" loading="eager" decoding="async" />
        <span>{it.name}</span>
      </a>
    ))}
  </div>
</div>

<style>
  .lang-abs {
    position: absolute;
    top: 14px;
    right: 40px;
    z-index: 60;
    transform: translateY(8px);
  }
  @media (min-width: 1024px) {
    .lang-abs { top: 18px; right: 80px; }
  }

  /* เมนู (ลอยตรงกลางใต้ปุ่มหลัก) */
  .menu-panel {
    position: absolute;
    left: 50%;
    transform: translateX(-50%) translateY(4px);
    margin-top: 4px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
    transition: opacity 200ms ease, visibility 200ms ease, transform 200ms ease;
  }

  #langRoot[data-open="true"] .menu-panel {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
    transform: translateX(-50%) translateY(0);
  }

  /* ปุ่ม EN / TH (พื้นขาว, ขนาดเท่ากัน, อยู่กลาง) */
  .menu-item {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    width: 120px;
    padding: 0.5rem 0.75rem;
    border-radius: 9999px;

    background: #ffffff;
    color: #374151;
    font-size: 0.875rem;
    font-weight: 600;

    box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
    transition: all 0.18s ease;
  }

  .menu-item.is-active {
    background: #ffffff;
    color: #374151;
    font-weight: 700;
  }

  .menu-item:hover,
  .menu-item.is-active:hover {
    background: #00D2E6;
    color: #ffffff;
    transform: translateY(-1px);
    box-shadow: 0 6px 14px rgba(0, 210, 230, 0.35);
  }

  .menu-item img {
    width: 18px;
    height: 18px;
    display: block;
    border-radius: 9999px;
  }
</style>

<script is:inline>
  window.addEventListener('DOMContentLoaded', () => {
    const root = document.getElementById('langRoot');
    if (!root) return;

    const btn  = document.getElementById('langBtn');
    const menu = document.getElementById('langMenu');
    if (!btn || !menu) return;

    // พรีโหลดรูปธงกันดีเลย์ตอนเปิดครั้งแรก
    ['/usflag.png','/thaiflag.png'].forEach((src) => {
      const i = new Image();
      i.src = src;
    });

    let open = false;
    const setOpen = (v) => {
      open = v;
      root.setAttribute('data-open', open ? 'true' : 'false');
      btn.setAttribute('aria-expanded', String(open));
    };

    btn.addEventListener('click', (e) => {
      e.stopPropagation();
      setOpen(!open);
    });

    document.addEventListener('click', (e) => {
      if (!root.contains(e.target)) setOpen(false);
    });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') setOpen(false);
    });

    window.addEventListener('scroll', () => setOpen(false), { passive: true });
  });
</script>
